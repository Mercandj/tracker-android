<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space"
        android:layout_marginEnd="@dimen/default_space_1_5"
        android:layout_marginStart="@dimen/default_space_1_5"
        android:layout_marginTop="@dimen/default_space_1_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_space_1_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_space_4"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:gravity="center_vertical"
                android:text="@string/view_device_specs_title"
                android:textColor="@color/color_text_title_1"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:background="#999999" />

            <TextView
                android:id="@+id/view_device_spec_device_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space"
                tools:text="Samsung" />

            <TextView
                android:id="@+id/view_device_spec_device_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                tools:text="Galaxy Nexus" />

            <TextView
                android:id="@+id/view_device_spec_device_os_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                tools:text="14" />

            <TextView
                android:id="@+id/view_device_spec_device_hardware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                tools:text="Hardware" />

            <TextView
                android:id="@+id/view_device_spec_device_density"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                tools:text="Density" />

            <TextView
                android:id="@+id/view_device_spec_device_emulator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                tools:text="Is emulator" />

            <TextView
                android:id="@+id/view_device_spec_device_rooted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                tools:text="Is rooted" />

            <TextView
                android:id="@+id/view_device_spec_device_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                tools:text="Battery" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>
