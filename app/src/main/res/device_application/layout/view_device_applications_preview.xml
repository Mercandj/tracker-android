<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space_1_5"
        android:layout_marginEnd="@dimen/default_space_1_5"
        android:layout_marginStart="@dimen/default_space_1_5"
        android:layout_marginTop="@dimen/default_space">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_space_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/default_space_1_5"
                    android:layout_marginStart="@dimen/default_space_1_5"
                    android:text="@string/view_device_applications_preview_title"
                    android:textColor="@color/color_text_title_1"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_device_applications_preview_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/default_space_1_5"
                        android:paddingStart="@dimen/default_space_1_5"
                        android:text="@string/refresh"
                        android:textColor="@color/color_accent_dark"
                        android:textSize="@dimen/text_size_s"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/view_device_applications_preview_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:paddingEnd="@dimen/default_space"
                        android:paddingStart="@dimen/default_space"
                        android:src="@drawable/ic_lock_open_black_24dp" />

                    <TextView
                        android:id="@+id/view_device_applications_preview_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/default_space_1_5"
                        android:paddingStart="@dimen/default_space_1_5"
                        android:text="@string/more"
                        android:textColor="@color/color_accent_dark"
                        android:textSize="@dimen/text_size_s"
                        android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:background="#999999" />

            <TextView
                android:id="@+id/view_device_applications_preview_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_space"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space"
                tools:text="14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_space_1_5"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:layout_marginTop="@dimen/default_space_half"
                android:text="Most popular:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space_1_5"
                android:layout_marginStart="@dimen/default_space_1_5"
                android:orientation="horizontal">

                <com.mercandalli.tracker.device_application.DeviceApplicationCard
                    android:id="@+id/view_device_applications_preview_app_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.mercandalli.tracker.device_application.DeviceApplicationCard
                    android:id="@+id/view_device_applications_preview_app_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.mercandalli.tracker.device_application.DeviceApplicationCard
                    android:id="@+id/view_device_applications_preview_app_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.mercandalli.tracker.device_application.DeviceApplicationCard
                    android:id="@+id/view_device_applications_preview_app_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>
